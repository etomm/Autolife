@using Autolife.Core.Models
@inject Autolife.Web.Services.KnowledgeService KnowledgeService

<div class="modal @(IsVisible ? "show d-block" : "d-none")" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(IsEditMode ? "Edit" : "Create") Knowledge Entry</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@entry" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <InputText class="form-control" @bind-Value="entry.Title" placeholder="Enter title" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <InputText class="form-control" @bind-Value="entry.Category" placeholder="e.g., Technology, Health, Finance" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tags (comma-separated)</label>
                        <InputText class="form-control" @bind-Value="tagsInput" placeholder="e.g., programming, tutorial, tips" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <InputTextArea class="form-control" rows="10" @bind-Value="entry.Content" placeholder="Write your knowledge entry here..." />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                        <button type="submit" class="btn btn-primary">@(IsEditMode ? "Update" : "Create")</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public KnowledgeEntry? ExistingEntry { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }
    [Parameter] public EventCallback OnClosed { get; set; }

    private KnowledgeEntry entry = new();
    private string tagsInput = "";
    private bool IsEditMode => ExistingEntry != null;

    protected override void OnParametersSet()
    {
        if (ExistingEntry != null)
        {
            entry = new KnowledgeEntry
            {
                Id = ExistingEntry.Id,
                Title = ExistingEntry.Title,
                Content = ExistingEntry.Content,
                Category = ExistingEntry.Category,
                Tags = new List<string>(ExistingEntry.Tags)
            };
            tagsInput = string.Join(", ", entry.Tags);
        }
        else
        {
            entry = new KnowledgeEntry();
            tagsInput = "";
        }
    }

    private async Task HandleSubmit()
    {
        entry.Tags = tagsInput.Split(',').Select(t => t.Trim()).Where(t => !string.IsNullOrEmpty(t)).ToList();
        
        if (IsEditMode)
        {
            await KnowledgeService.UpdateAsync(entry);
        }
        else
        {
            await KnowledgeService.CreateAsync(entry);
        }

        await OnSaved.InvokeAsync();
        Close();
    }

    private void Close()
    {
        OnClosed.InvokeAsync();
    }
}
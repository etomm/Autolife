        display: flex;
        flex-direction: column;
        height: 600px;
        max-height: 80vh;
        background: var(--bg-secondary);
        border-radius: 12px;
        box-shadow: 0 4px 24px var(--shadow);
        position: relative;
        z-index: 1051;
        pointer-events: auto;
    }

    .browser-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .browser-header h5 {
        margin: 0;
        color: var(--text-primary);
    }

    .btn-close {
        background: transparent;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--text-secondary);
        padding: 0.25rem 0.5rem;
        line-height: 1;
    }

    .btn-close:hover {
        color: var(--text-primary);
    }

    .btn-close::before {
        content: "\00d7";
    }

    .browser-body {
        flex: 1;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        padding: 1rem;
        gap: 1rem;
        position: relative;
    }

    .current-path-container {
        min-height: 60px;
        max-height: 60px;
        position: relative;
    }

    .path-placeholder {
        padding: 0.75rem;
        background: var(--bg-tertiary);
        border-radius: 8px;
        border: 2px dashed var(--border-color);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--text-secondary);
        font-style: italic;
        min-height: 60px;
    }

    .path-placeholder i {
        font-size: 1.5rem;
    }

    .current-path {
        padding: 0.75rem;
        background: var(--bg-tertiary);
        border-radius: 8px;
        border: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.5rem;
        position: relative;
        min-height: 60px;
    }

    .current-path.calculating {
        pointer-events: none;
        opacity: 0.7;
    }

    .breadcrumb-nav {
        flex: 1;
        overflow: hidden;
        min-height: 32px;
    }

    .breadcrumb-nav.hidden {
        display: none;
    }

    .breadcrumb-content {
        display: flex;
        align-items: center;
        flex-wrap: nowrap;
        gap: 0.25rem;
        width: max-content;
        min-width: 100%;
    }

    .breadcrumb-back {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-primary);
        cursor: pointer;
        padding: 0 0.5rem;
        border-radius: 6px;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        height: 38px;
        width: 32px;
    }

    .breadcrumb-back:hover {
        background: var(--accent-color);
        color: white;
        border-color: var(--accent-color);
    }

    .breadcrumb-back i {
        font-size: 1rem;
    }

    .breadcrumb-ellipsis {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--accent-color);
        cursor: pointer;
        padding: 0 0.5rem;
        border-radius: 6px;
        transition: all 0.2s;
        font-weight: bold;
        flex-shrink: 0;
        height: 38px;
        width: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .breadcrumb-ellipsis:hover {
        background: var(--accent-color);
        color: white;
        border-color: var(--accent-color);
    }

    .breadcrumb-item {
        background: none;
        border: none;
        color: var(--accent-color);
        cursor: pointer;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        transition: background 0.2s;
        white-space: nowrap;
        flex-shrink: 0;
        font-weight: 500;
    }

    .breadcrumb-item:hover {
        background: var(--bg-secondary);
    }

    .breadcrumb-item.breadcrumb-current {
        cursor: default;
        color: var(--text-primary);
        font-weight: 600;
    }

    .breadcrumb-item.breadcrumb-current:hover {
        background: none;
    }

    .breadcrumb-separator {
        color: var(--text-tertiary);
        flex-shrink: 0;
    }

    .btn-new-folder {
        background: #28a745;
        color: white;
        border: none;
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: background 0.2s;
        white-space: nowrap;
        flex-shrink: 0;
        height: 38px;
    }

    .btn-new-folder:hover {
        background: #218838;
    }

    .btn-new-folder i {
        font-size: 1.1rem;
    }

    .inline-create-container {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        flex-shrink: 0;
        position: relative;
    }

    .inline-create-container.error {
        z-index: 100;
    }

    .inline-create-input {
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        background: var(--input-bg);
        color: var(--text-primary);
        font-size: 0.9rem;
        width: 150px;
        transition: border-color 0.2s;
        height: 38px;
    }

    .inline-create-container.error .inline-create-input {
        border-color: #dc3545;
    }

    .inline-create-input:focus {
        outline: none;
        border-color: var(--accent-color);
    }

    .btn-inline-create,
    .btn-inline-cancel {
        background: transparent;
        border: 1px solid var(--border-color);
        color: var(--text-primary);
        padding: 0.5rem 0.75rem;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        transition: all 0.2s;
        height: 38px;
    }

    .btn-inline-create:hover:not(:disabled) {
        background: #28a745;
        border-color: #28a745;
        color: white;
    }

    .btn-inline-cancel:hover {
        background: #dc3545;
        border-color: #dc3545;
        color: white;
    }

    .btn-inline-create:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .create-error-overlay {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        margin-top: 0.5rem;
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 6px;
        padding: 0.5rem 0.75rem;
        color: #721c24;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        z-index: 101;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        animation: slideDown 0.2s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-5px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .create-error-overlay i.bi-exclamation-circle {
        font-size: 1rem;
        flex-shrink: 0;
    }

    .create-error-overlay span {
        flex: 1;
    }

    .btn-error-info {
        background: transparent;
        border: 1px solid #721c24;
        color: #721c24;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        padding: 0;
        flex-shrink: 0;
    }

    .btn-error-info:hover {
        background: #721c24;
        color: white;
    }

    .btn-error-info i {
        font-size: 0.75rem;
    }

    .error-details-popup {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: var(--bg-secondary);
        border: 2px solid #dc3545;
        border-radius: 8px;
        padding: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        z-index: 1070;
        max-width: 500px;
        width: 90%;
        max-height: 400px;
        overflow-y: auto;
        animation: popupAppear 0.2s ease;
        pointer-events: auto;
    }

    .error-details-popup.expanded {
        max-width: 700px;
        max-height: 600px;
    }

    @@keyframes popupAppear {
        from {
            opacity: 0;
            transform: translate(-50%, -50%) scale(0.9);
        }
        to {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1);
        }
    }

    .error-popup-header {
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
        color: #dc3545;
    }

    .error-popup-body {
        color: var(--text-primary);
    }

    .error-popup-body .error-message {
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .btn-more-details,
    .btn-less-details {
        background: var(--accent-color);
        color: white;
        border: none;
        padding: 0.375rem 0.75rem;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        transition: background 0.2s;
        margin-top: 0.5rem;
    }

    .btn-more-details:hover,
    .btn-less-details:hover {
        background: var(--accent-hover);
    }

    .stack-trace {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
    }

    .stack-trace strong {
        display: block;
        margin-bottom: 0.5rem;
        color: #dc3545;
    }

    .stack-trace pre {
        background: var(--bg-tertiary);
        border: 1px solid var(--border-color);
        padding: 0.75rem;
        border-radius: 4px;
        font-size: 0.75rem;
        line-height: 1.4;
        overflow-x: auto;
        white-space: pre-wrap;
        word-break: break-all;
        color: var(--text-secondary);
        margin: 0;
    }

    .error-inline {
        padding: 0.75rem 1rem;
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 6px;
        color: #721c24;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
    }

    .error-inline i {
        font-size: 1.1rem;
    }

    .btn-error-details {
        margin-left: auto;
        background: transparent;
        border: 1px solid #721c24;
        color: #721c24;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-error-details:hover {
        background: #721c24;
        color: white;
    }

    .error-details {
        padding: 0.75rem;
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 6px;
        color: #856404;
        font-size: 0.85rem;
        font-family: monospace;
        white-space: pre-wrap;
        word-break: break-all;
    }

    .folder-list {
        flex: 1;
        overflow-y: auto;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        background: var(--bg-secondary);
    }

    .folder-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        cursor: pointer;
        transition: background 0.2s;
        border-bottom: 1px solid var(--border-color);
    }

    .folder-item:hover:not(.disabled) {
        background: var(--bg-tertiary);
    }

    .folder-item.selected {
        background: rgba(102, 126, 234, 0.1);
        border-left: 3px solid var(--accent-color);
    }

    .folder-item.disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .folder-item.network-item i {
        color: #17a2b8;
    }

    .folder-item i {
        font-size: 1.25rem;
        color: var(--accent-color);
        min-width: 24px;
    }

    .folder-item .bi-chevron-right {
        margin-left: auto;
        font-size: 1rem;
        color: var(--text-tertiary);
    }

    .folder-name {
        flex: 1;
        color: var(--text-primary);

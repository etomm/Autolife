@using Autolife.Core.Models
@inject Autolife.Web.Services.DocumentService DocumentService

<div class="modal @(IsVisible ? "show d-block" : "d-none")" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Document</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Document Name</label>
                    <input type="text" class="form-control" @bind="documentName" placeholder="Enter document name" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" @bind="selectedCategory">
                        <option value="Personal">Personal</option>
                        <option value="Work">Work</option>
                        <option value="Financial">Financial</option>
                        <option value="Legal">Legal</option>
                        <option value="Medical">Medical</option>
                        <option value="Education">Education</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">File</label>
                    <InputFile class="form-control" OnChange="HandleFileSelected" />
                    @if (!string.IsNullOrEmpty(selectedFileName))
                    {
                        <small class="text-muted">Selected: @selectedFileName</small>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label">Notes</label>
                    <textarea class="form-control" rows="3" @bind="notes" placeholder="Add any notes about this document..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="HandleUpload" disabled="@(string.IsNullOrEmpty(documentName) || selectedFile == null)">Upload</button>
            </div>
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnUploaded { get; set; }
    [Parameter] public EventCallback OnClosed { get; set; }

    private string documentName = "";
    private string selectedCategory = "Personal";
    private string notes = "";
    private string selectedFileName = "";
    private IBrowserFile? selectedFile;

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        selectedFileName = e.File.Name;
        if (string.IsNullOrEmpty(documentName))
        {
            documentName = Path.GetFileNameWithoutExtension(e.File.Name);
        }
    }

    private async Task HandleUpload()
    {
        if (selectedFile != null)
        {
            var document = new Document
            {
                Name = documentName,
                Category = selectedCategory,
                Description = notes,
                FileName = selectedFileName,
                FileSize = selectedFile.Size,
                UploadDate = DateTime.UtcNow
            };

            // TODO: Actually upload file content
            await DocumentService.CreateAsync(document);
            
            await OnUploaded.InvokeAsync();
            ResetForm();
            Close();
        }
    }

    private void ResetForm()
    {
        documentName = "";
        selectedCategory = "Personal";
        notes = "";
        selectedFileName = "";
        selectedFile = null;
    }

    private void Close()
    {
        OnClosed.InvokeAsync();
    }
}
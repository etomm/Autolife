@page "/projects"

<PageTitle>Projects - Autolife</PageTitle>

<div class="projects-container">
    <div class="page-header">
        <h1>ðŸš€ Projects</h1>
        <button class="btn btn-primary" @onclick="CreateNewProject">
            <i class="bi bi-plus-lg"></i> New Project
        </button>
    </div>

    @if (projects.Any())
    {
        <div class="projects-grid">
            @foreach (var project in projects)
            {
                <div class="project-card">
                    <div class="project-header">
                        <h3>@project.Name</h3>
                        <span class="status-badge status-@project.Status.ToLower()">@project.Status</span>
                    </div>
                    <p>@project.Description</p>
                    <div class="project-progress">
                        <div class="progress">
                            <div class="progress-bar" style="width: @(project.Progress)%"></div>
                        </div>
                        <span class="progress-text">@project.Progress% Complete</span>
                    </div>
                    <div class="project-footer">
                        <span><i class="bi bi-calendar"></i> @project.DueDate.ToShortDateString()</span>
                        <span><i class="bi bi-list-task"></i> @project.TasksCompleted/@project.TotalTasks tasks</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-kanban"></i>
            <h3>No projects yet</h3>
            <p>Start tracking your work by creating your first project.</p>
            <button class="btn btn-primary" @onclick="CreateNewProject">Create First Project</button>
        </div>
    }
</div>

@code {
    private List<Project> projects = new();

    private class Project
    {
        public string Name { get; set; } = "";
        public string Description { get; set; } = "";
        public string Status { get; set; } = "Active";
        public int Progress { get; set; }
        public DateTime DueDate { get; set; }
        public int TasksCompleted { get; set; }
        public int TotalTasks { get; set; }
    }


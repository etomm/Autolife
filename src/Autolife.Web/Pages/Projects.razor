@page "/projects"
@using Autolife.Core.Interfaces
@using Autolife.Core.Models
@inject IProjectService ProjectService

<PageTitle>Projects - Autolife</PageTitle>

<div class="projects-container">
    <div class="page-header">
        <h1><i class="bi bi-kanban"></i> Projects</h1>
        <button class="btn btn-primary" @onclick="() => showCreateDialog = true">
            <i class="bi bi-plus-lg"></i> New Project
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-4">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (projects.Any())
    {
        <div class="projects-grid">
            @foreach (var project in projects)
            {
                <div class="project-card">
                    <div class="project-header">
                        <h3>@project.Name</h3>
                        <span class="status-badge status-@project.Status.ToString().ToLower()">@project.Status</span>
                    </div>
                    <p>@project.Description</p>
                    <div class="project-progress">
                        <div class="progress">
                            <div class="progress-bar" style="width: @(project.Progress)%"></div>
                        </div>
                        <span class="progress-text">@project.Progress% Complete</span>
                    </div>
                    <div class="project-footer">
                        @if (project.DueDate.HasValue)
                        {
                            <span><i class="bi bi-calendar"></i> @project.DueDate.Value.ToShortDateString()</span>
                        }
                        <span><i class="bi bi-list-task"></i> @project.Tasks.Count(t => t.IsCompleted)/@project.Tasks.Count tasks</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-kanban"></i>
                <div class="slash"></div>
            </div>
            <h3>No projects yet</h3>
            <p>Start tracking your work by creating your first project.</p>
            <button class="btn btn-primary" @onclick="() => showCreateDialog = true">Create First Project</button>
        </div>
    }
</div>

@if (showCreateDialog)
{
    <div class="modal-backdrop" @onclick="() => showCreateDialog = false"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Create Project</h5>
                <button class="btn-close" @onclick="() => showCreateDialog = false"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Project Name *</label>
                    <input type="text" class="form-control" @bind="newProject.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Description *</label>
                    <textarea class="form-control" rows="4" @bind="newProject.Description" placeholder="Describe your project..."></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Due Date</label>
                    <input type="date" class="form-control" @bind="dueDate" @bind:format="yyyy-MM-dd" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="() => showCreateDialog = false">Cancel</button>
                <button class="btn btn-primary" @onclick="CreateProject" disabled="@(string.IsNullOrWhiteSpace(newProject.Name) || string.IsNullOrWhiteSpace(newProject.Description))">Create & Generate AI Plan</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Project> projects = new();
    private bool isLoading = true;
    private bool showCreateDialog = false;
    private Project newProject = new();
    private DateTime? dueDate = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        isLoading = true;
        try
        {
            projects = (await ProjectService.GetAllAsync()).ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateProject()
    {
        try
        {
            if (dueDate.HasValue)
            {
                newProject.DueDate = dueDate.Value;
            }

            newProject.StartDate = DateTime.UtcNow;
            newProject.Status = ProjectStatus.Active;

            await ProjectService.CreateAsync(newProject);
            showCreateDialog = false;
            newProject = new Project();
            dueDate = null;
            await LoadProjects();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating project: {ex.Message}");
        }
    }
}


@page "/settings"
@using Autolife.Core.Interfaces
@using Autolife.Core.Models
@inject IAIProviderManager ProviderManager

<PageTitle>Settings - Autolife</PageTitle>

<div class="settings-container">
    <h1>‚öôÔ∏è Settings</h1>

    <div class="settings-section">
        <div class="section-header">
            <h2>ü§ñ AI Providers</h2>
            <button class="btn btn-primary" @onclick="() => showAddDialog = true">
                <i class="bi bi-plus-lg"></i> Add Provider
            </button>
        </div>

        @if (isLoading)
        {
            <div class="text-center p-4">
                <div class="spinner-border" role="status"></div>
            </div>
        }
        else if (providers.Any())
        {
            <div class="fallback-chain">
                <h3>Fallback Chain (Priority Order)</h3>
                <div class="chain-items">
                    @foreach (var provider in providers.OrderBy(p => p.Priority))
                    {
                        <div class="chain-item">
                            <div class="chain-arrow">@(provider.Priority == providers.Min(p => p.Priority) ? "‚û§" : "‚Üì")</div>
                            <div class="provider-card @(provider.IsEnabled ? "" : "disabled")">
                                <div class="provider-header">
                                    <div class="provider-info">
                                        <h4>@provider.Name</h4>
                                        <span class="provider-type">@provider.Type</span>
                                        <span class="status-badge status-@provider.Status.ToString().ToLower()">@provider.Status</span>
                                    </div>
                                    <div class="provider-actions">
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => EditProvider(provider)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProvider(provider.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="provider-details">
                                    <div class="detail-row">
                                        <span class="label">Priority:</span>
                                        <span class="value">@provider.Priority</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Model:</span>
                                        <span class="value">@provider.Model</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Enabled:</span>
                                        <span class="value">@(provider.IsEnabled ? "Yes" : "No")</span>
                                    </div>
                                    @if (provider.LastSuccessfulCall.HasValue)
                                    {
                                        <div class="detail-row">
                                            <span class="label">Last Success:</span>
                                            <span class="value">@provider.LastSuccessfulCall.Value.ToLocalTime().ToString("g")</span>
                                        </div>
                                    }
                                    @if (provider.ConsecutiveFailures > 0)
                                    {
                                        <div class="detail-row warning">
                                            <span class="label">Consecutive Failures:</span>
                                            <span class="value">@provider.ConsecutiveFailures</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>No AI providers configured. Add your first provider to get started.</p>
            </div>
        }
    </div>
</div>

@if (showAddDialog || showEditDialog)
{
    <div class="modal-backdrop" @onclick="CloseDialog"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>@(showEditDialog ? "Edit" : "Add") AI Provider</h5>
                <button class="btn-close" @onclick="CloseDialog"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Provider Name *</label>
                    <input type="text" class="form-control" @bind="editingProvider.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Provider Type *</label>
                    <select class="form-control" @bind="editingProvider.Type">
                        <option value="@AIProviderType.OpenAI">OpenAI</option>
                        <option value="@AIProviderType.AzureOpenAI">Azure OpenAI</option>
                        <option value="@AIProviderType.Anthropic">Anthropic (Claude)</option>
                        <option value="@AIProviderType.GoogleGemini">Google Gemini</option>
                        <option value="@AIProviderType.LocalLlama">Local Llama</option>
                        <option value="@AIProviderType.Mock">Mock (Testing)</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">API Key *</label>
                    <input type="password" class="form-control" @bind="editingProvider.ApiKey" placeholder="sk-..." />
                </div>
                @if (editingProvider.Type == AIProviderType.AzureOpenAI)
                {
                    <div class="mb-3">
                        <label class="form-label">Endpoint URL *</label>
                        <input type="text" class="form-control" @bind="editingProvider.Endpoint" placeholder="https://your-resource.openai.azure.com" />
                    </div>
                }
                <div class="mb-3">
                    <label class="form-label">Model *</label>
                    <input type="text" class="form-control" @bind="editingProvider.Model" placeholder="gpt-4, claude-3, etc." />
                </div>
                <div class="mb-3">
                    <label class="form-label">Priority (lower = higher priority) *</label>
                    <input type="number" class="form-control" @bind="editingProvider.Priority" min="0" max="100" />
                    <small class="form-text text-muted">0 = highest priority, 100 = lowest priority</small>
                </div>
                <div class="mb-3">
                    <label class="form-label">Timeout (seconds)</label>
                    <input type="number" class="form-control" @bind="editingProvider.TimeoutSeconds" min="5" max="120" />
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="enabledCheck" @bind="editingProvider.IsEnabled" />
                    <label class="form-check-label" for="enabledCheck">Enabled</label>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveProvider" 
                        disabled="@(string.IsNullOrWhiteSpace(editingProvider.Name) || string.IsNullOrWhiteSpace(editingProvider.ApiKey) || string.IsNullOrWhiteSpace(editingProvider.Model))">
                    Save
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<AIProviderConfig> providers = new();
    private bool isLoading = true;
    private bool showAddDialog = false;
    private bool showEditDialog = false;
    private AIProviderConfig editingProvider = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProviders();
    }

    private async Task LoadProviders()
    {
        isLoading = true;
        try
        {
            providers = await ProviderManager.GetAllProvidersAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EditProvider(AIProviderConfig provider)
    {
        editingProvider = new AIProviderConfig
        {
            Id = provider.Id,
            Name = provider.Name,
            Type = provider.Type,
            ApiKey = provider.ApiKey,
            Endpoint = provider.Endpoint,
            Model = provider.Model,
            Priority = provider.Priority,
            TimeoutSeconds = provider.TimeoutSeconds,
            IsEnabled = provider.IsEnabled
        };
        showEditDialog = true;
    }

    private async Task SaveProvider()
    {
        try
        {
            if (showEditDialog)
            {
                await ProviderManager.UpdateProviderAsync(editingProvider);
            }
            else
            {
                await ProviderManager.AddProviderAsync(editingProvider);
            }
            
            CloseDialog();
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving provider: {ex.Message}");
        }
    }

    private async Task DeleteProvider(Guid id)
    {
        if (providers.Count == 1)
        {
            // Don't allow deleting the last provider
            return;
        }

        try
        {
            await ProviderManager.DeleteProviderAsync(id);
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting provider: {ex.Message}");
        }
    }

    private void CloseDialog()
    {
        showAddDialog = false;
        showEditDialog = false;
        editingProvider = new AIProviderConfig { Priority = 10, TimeoutSeconds = 30, IsEnabled = true };
    }
}


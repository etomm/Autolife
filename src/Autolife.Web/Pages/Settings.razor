@page "/settings"
@using Autolife.Core.Interfaces
@using Autolife.Core.Models
@using Autolife.Web.Components
@inject IAIProviderManager ProviderManager
@inject ISettingsManager SettingsManager
@implements IDisposable

<PageTitle>Settings - Autolife</PageTitle>

<div class="settings-container">
    <h1><i class="bi bi-gear"></i> Settings</h1>

    <!-- UI Settings Section -->
    <div class="settings-section">
        <h2><i class="bi bi-palette"></i> User Interface</h2>
        <div class="settings-grid">
            <div class="setting-item">
                <label class="setting-label">Theme</label>
                <select class="form-control" @bind="userSettings.Theme" @bind:after="SaveUserSettings">
                    <option value="@Theme.Light">Light</option>
                    <option value="@Theme.Dark">Dark</option>
                    <option value="@Theme.Auto">Auto</option>
                </select>
            </div>
            <div class="setting-item">
                <label class="setting-label">Language</label>
                <select class="form-control" @bind="userSettings.Language" @bind:after="SaveUserSettings">
                    <option>English</option>
                    <option>Italian</option>
                    <option>Spanish</option>
                    <option>French</option>
                    <option>German</option>
                </select>
            </div>
            <div class="setting-item">
                <label class="setting-label">Date Format</label>
                <select class="form-control" @bind="userSettings.DateFormat" @bind:after="SaveUserSettings">
                    <option value="@DateFormat.MMDDYYYY">MM/DD/YYYY</option>
                    <option value="@DateFormat.DDMMYYYY">DD/MM/YYYY</option>
                    <option value="@DateFormat.YYYYMMDD">YYYY-MM-DD</option>
                </select>
            </div>
            <div class="setting-item">
                <label class="setting-label">Items per page</label>
                <input type="number" class="form-control" @bind="userSettings.ItemsPerPage" @bind:after="SaveUserSettings" min="10" max="100" />
            </div>
        </div>
        @if (showSavedMessage)
        {
            <div class="saved-indicator">
                <i class="bi bi-check-circle-fill"></i> Settings saved
            </div>
        }
    </div>

    <!-- AI Providers Section -->
    <div class="settings-section">
        <div class="section-header">
            <h2><i class="bi bi-robot"></i> AI Providers</h2>
            <button class="btn btn-primary" @onclick="() => showAddDialog = true">
                <i class="bi bi-plus-lg"></i> Add Provider
            </button>
        </div>
        
        <p class="section-description">Manage AI providers in priority order. Drag to reorder - top providers are tried first, with automatic fallback to lower ones if they fail.</p>

        @if (isLoading)
        {
            <div class="text-center p-4">
                <div class="spinner-border" role="status"></div>
            </div>
        }
        else if (providers.Any())
        {
            <div class="providers-list">
                @foreach (var provider in providers.OrderBy(p => p.Priority))
                {
                    <div class="provider-card @(provider.IsEnabled ? "" : "disabled")" draggable="true">
                        <div class="drag-handle">
                            <i class="bi bi-grip-vertical"></i>
                        </div>
                        <div class="provider-content">
                            <div class="provider-main">
                                <div class="provider-info">
                                    <div class="provider-name-row">
                                        <h4>@provider.Name</h4>
                                        <span class="status-badge status-@provider.Status.ToString().ToLower()">
                                            <i class="bi bi-circle-fill"></i> @provider.Status
                                        </span>
                                    </div>
                                    <div class="provider-meta">
                                        <span class="meta-item"><i class="bi bi-tag"></i> @provider.Type</span>
                                        <span class="meta-item"><i class="bi bi-cpu"></i> @provider.Model</span>
                                        @if (!provider.IsEnabled)
                                        {
                                            <span class="meta-item disabled-badge"><i class="bi bi-pause-circle"></i> Disabled</span>
                                        }
                                    </div>
                                </div>
                                <div class="provider-actions">
                                    <button class="btn-icon" @onclick="() => EditProvider(provider)" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn-icon" @onclick="() => DeleteProvider(provider.Id)" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                            @if (provider.LastSuccessfulCall.HasValue || provider.ConsecutiveFailures > 0)
                            {
                                <div class="provider-stats">
                                    @if (provider.LastSuccessfulCall.HasValue)
                                    {
                                        <span class="stat-item success">
                                            <i class="bi bi-check-circle"></i> Last success: @provider.LastSuccessfulCall.Value.ToLocalTime().ToString("g")
                                        </span>
                                    }
                                    @if (provider.ConsecutiveFailures > 0)
                                    {
                                        <span class="stat-item failure">
                                            <i class="bi bi-exclamation-triangle"></i> @provider.ConsecutiveFailures consecutive failures
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-robot"></i>
                <p>No AI providers configured.</p>
                <button class="btn btn-primary" @onclick="() => showAddDialog = true">Add Your First Provider</button>
            </div>
        }
    </div>

    <!-- Repository Settings Section -->
    <div class="settings-section">
        <h2><i class="bi bi-database"></i> Repository</h2>
        <div class="settings-grid">
            <div class="setting-item full-width">
                <label class="setting-label">Storage Type</label>
                <select class="form-control" @bind="repositorySettings.StorageType" @bind:after="SaveRepositorySettings">
                    <option value="@StorageType.InMemory">In-Memory (Default)</option>
                    <option value="@StorageType.LocalGit">Local Git Repository</option>
                    <option value="@StorageType.SQLite">SQLite Database</option>
                    <option value="@StorageType.PostgreSQL">PostgreSQL</option>
                </select>
            </div>
            <div class="setting-item full-width">
                <label class="setting-label">Local Repository Path</label>
                <div class="path-input-group">
                    <input type="text" class="form-control" @bind="repositorySettings.LocalRepositoryPath" @bind:after="SaveRepositorySettings" placeholder="/path/to/autolife-data" />
                    <button class="btn btn-primary" @onclick="() => showFolderBrowser = true">
                        <i class="bi bi-folder2-open"></i> Browse
                    </button>
                </div>
            </div>
            <div class="setting-item">
                <label class="setting-label">Auto-commit changes</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" @bind="repositorySettings.AutoCommit" @bind:after="SaveRepositorySettings" />
                </div>
            </div>
            <div class="setting-item">
                <label class="setting-label">Auto-backup</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" @bind="repositorySettings.AutoBackup" @bind:after="SaveRepositorySettings" />
                </div>
            </div>
        </div>
        @if (showRepoSavedMessage)
        {
            <div class="saved-indicator">
                <i class="bi bi-check-circle-fill"></i> Repository settings saved
            </div>
        }
    </div>
</div>

@if (showAddDialog || showEditDialog)
{
    <div class="modal-backdrop" @onclick="CloseDialog"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="bi bi-robot"></i> @(showEditDialog ? "Edit" : "Add") AI Provider</h5>
                <button class="btn-close" @onclick="CloseDialog"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Provider Name *</label>
                    <input type="text" class="form-control" @bind="editingProvider.Name" placeholder="My OpenAI Provider" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Provider Type *</label>
                    <select class="form-control" @bind="editingProvider.Type">
                        <option value="@AIProviderType.OpenAI">OpenAI</option>
                        <option value="@AIProviderType.AzureOpenAI">Azure OpenAI</option>
                        <option value="@AIProviderType.Anthropic">Anthropic (Claude)</option>
                        <option value="@AIProviderType.GoogleGemini">Google Gemini</option>
                        <option value="@AIProviderType.LocalLlama">Local Llama</option>
                        <option value="@AIProviderType.Mock">Mock (Testing)</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">API Key *</label>
                    <input type="password" class="form-control" @bind="editingProvider.ApiKey" placeholder="sk-..." />
                </div>
                @if (editingProvider.Type == AIProviderType.AzureOpenAI)
                {
                    <div class="mb-3">
                        <label class="form-label">Endpoint URL *</label>
                        <input type="text" class="form-control" @bind="editingProvider.Endpoint" placeholder="https://your-resource.openai.azure.com" />
                    </div>
                }
                <div class="mb-3">
                    <label class="form-label">Model *</label>
                    <input type="text" class="form-control" @bind="editingProvider.Model" placeholder="gpt-4, claude-3-opus, etc." />
                </div>
                <div class="mb-3">
                    <label class="form-label">Timeout (seconds)</label>
                    <input type="number" class="form-control" @bind="editingProvider.TimeoutSeconds" min="5" max="120" />
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="enabledCheck" @bind="editingProvider.IsEnabled" />
                    <label class="form-check-label" for="enabledCheck">Enabled</label>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveProvider" 
                        disabled="@(string.IsNullOrWhiteSpace(editingProvider.Name) || string.IsNullOrWhiteSpace(editingProvider.ApiKey) || string.IsNullOrWhiteSpace(editingProvider.Model))">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
}

@if (showFolderBrowser)
{
    <div class="modal-backdrop"></div>
    <div class="modal-dialog large">
        <FolderBrowser 
            Title="Select Repository Path"
            InitialPath="@repositorySettings.LocalRepositoryPath"
            OnPathSelected="HandlePathSelected"
            OnCancelled="() => showFolderBrowser = false" />
    </div>
}

@code {
    private List<AIProviderConfig> providers = new();
    private UserSettings userSettings = new();
    private RepositorySettings repositorySettings = new();
    private bool isLoading = true;
    private bool showAddDialog = false;
    private bool showEditDialog = false;
    private bool showFolderBrowser = false;
    private bool showSavedMessage = false;
    private bool showRepoSavedMessage = false;
    private AIProviderConfig editingProvider = new();
    private System.Threading.Timer? saveMessageTimer;
    private System.Threading.Timer? repoSaveMessageTimer;

    protected override async Task OnInitializedAsync()
    {
        userSettings = SettingsManager.GetUserSettings();
        repositorySettings = SettingsManager.GetRepositorySettings();
        await LoadProviders();
    }

    private async Task LoadProviders()
    {
        isLoading = true;
        try
        {
            providers = await ProviderManager.GetAllProvidersAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandlePathSelected(string path)
    {
        repositorySettings.LocalRepositoryPath = path;
        showFolderBrowser = false;
        SaveRepositorySettings();
    }

    private void SaveUserSettings()
    {
        SettingsManager.UpdateUserSettings(userSettings);
        ShowSavedIndicator();
    }

    private void SaveRepositorySettings()
    {
        SettingsManager.UpdateRepositorySettings(repositorySettings);
        ShowRepoSavedIndicator();
    }

    private void ShowSavedIndicator()
    {
        showSavedMessage = true;
        StateHasChanged();
        
        saveMessageTimer?.Dispose();
        saveMessageTimer = new System.Threading.Timer(_ =>
        {
            showSavedMessage = false;
            InvokeAsync(StateHasChanged);
        }, null, 2000, Timeout.Infinite);
    }

    private void ShowRepoSavedIndicator()
    {
        showRepoSavedMessage = true;
        StateHasChanged();
        
        repoSaveMessageTimer?.Dispose();
        repoSaveMessageTimer = new System.Threading.Timer(_ =>
        {
            showRepoSavedMessage = false;
            InvokeAsync(StateHasChanged);
        }, null, 2000, Timeout.Infinite);
    }

    private void EditProvider(AIProviderConfig provider)
    {
        editingProvider = new AIProviderConfig
        {
            Id = provider.Id,
            Name = provider.Name,
            Type = provider.Type,
            ApiKey = provider.ApiKey,
            Endpoint = provider.Endpoint,
            Model = provider.Model,
            Priority = provider.Priority,
            TimeoutSeconds = provider.TimeoutSeconds,
            IsEnabled = provider.IsEnabled
        };
        showEditDialog = true;
    }

    private async Task SaveProvider()
    {
        try
        {
            if (showEditDialog)
            {
                await ProviderManager.UpdateProviderAsync(editingProvider);
            }
            else
            {
                editingProvider.Priority = providers.Any() ? providers.Max(p => p.Priority) + 1 : 0;
                await ProviderManager.AddProviderAsync(editingProvider);
            }
            
            CloseDialog();
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving provider: {ex.Message}");
        }
    }

    private async Task DeleteProvider(Guid id)
    {
        if (providers.Count == 1)
        {
            return;
        }

        try
        {
            await ProviderManager.DeleteProviderAsync(id);
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting provider: {ex.Message}");
        }
    }

    private void CloseDialog()
    {
        showAddDialog = false;
        showEditDialog = false;
        editingProvider = new AIProviderConfig { TimeoutSeconds = 30, IsEnabled = true };
    }

    public void Dispose()
    {
        saveMessageTimer?.Dispose();
        repoSaveMessageTimer?.Dispose();
    }
}


@page "/knowledge"

<PageTitle>Knowledge - Autolife</PageTitle>

<div class="knowledge-container">
    <div class="page-header">
        <h1>ðŸ“š Knowledge Base</h1>
        <button class="btn btn-primary" @onclick="CreateNewEntry">
            <i class="bi bi-plus-lg"></i> New Entry
        </button>
    </div>

    <div class="search-bar">
        <input type="text" class="form-control" placeholder="Search knowledge base..." @bind="searchQuery" @bind:event="oninput" />
        <button class="btn btn-outline-primary" @onclick="Search">
            <i class="bi bi-search"></i> Search
        </button>
    </div>

    @if (knowledgeEntries.Any())
    {
        <div class="knowledge-grid">
            @foreach (var entry in knowledgeEntries)
            {
                <div class="knowledge-card">
                    <h3>@entry.Title</h3>
                    <p>@entry.Summary</p>
                    <div class="card-footer">
                        <span class="badge">@entry.Category</span>
                        <span class="date">@entry.LastModified.ToShortDateString()</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-book"></i>
            <h3>No knowledge entries yet</h3>
            <p>Start building your personal knowledge base by creating your first entry.</p>
            <button class="btn btn-primary" @onclick="CreateNewEntry">Create First Entry</button>
        </div>
    }
</div>


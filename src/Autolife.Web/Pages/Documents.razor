@page "/documents"

<PageTitle>Documents - Autolife</PageTitle>

<div class="documents-container">
    <div class="page-header">
        <h1><i class="bi bi-file-earmark-text"></i> Document Management</h1>
        <button class="btn btn-primary" @onclick="UploadDocument">
            <i class="bi bi-upload"></i> Upload Document
        </button>
    </div>

    <div class="toolbar">
        <input type="text" class="form-control" placeholder="Search documents..." @bind="searchQuery" />
        <select class="form-select" @bind="selectedCategory">
            <option value="">All Categories</option>
            <option value="personal">Personal</option>
            <option value="work">Work</option>
            <option value="financial">Financial</option>
            <option value="legal">Legal</option>
        </select>
    </div>

    @if (documents.Any())
    {
        <div class="documents-list">
            @foreach (var doc in documents)
            {
                <div class="document-item">
                    <div class="doc-icon">
                        <i class="bi bi-file-earmark-pdf"></i>
                    </div>
                    <div class="doc-info">
                        <h4>@doc.Name</h4>
                        <p>@doc.Size | Modified @doc.ModifiedDate.ToShortDateString()</p>
                    </div>
                    <div class="doc-actions">
                        <button class="btn btn-sm btn-outline-primary">View</button>
                        <button class="btn btn-sm btn-outline-secondary">Download</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-file-earmark-text"></i>
                <div class="slash"></div>
            </div>
            <h3>No documents uploaded yet</h3>
            <p>Start organizing your documents by uploading your first file.</p>
            <button class="btn btn-primary" @onclick="UploadDocument">Upload First Document</button>
        </div>
    }
</div>

@code {
    private string searchQuery = "";
    private string selectedCategory = "";
    private List<Document> documents = new();

    private class Document
    {
        public string Name { get; set; } = "";
        public string Size { get; set; } = "";
        public DateTime ModifiedDate { get; set; }
    }

    protected override void OnInitialized()
    {
        // TODO: Load actual documents from storage
    }

    private void UploadDocument()
    {
        // TODO: Implement document upload
    }
}

